---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";

const cards = [
  {
    index: 1,
    titleTop: "喜欢的游戏",
    titleBottom: "第九艺术爱好者",
    img: c1,
    alt: "Games",
    link: "#games",
  },
  {
    index: 2,
    titleTop: "喜欢的番剧",
    titleBottom: "二次元浓度较高",
    img: c2,
    alt: "Animation",
    link: "#animation",
  },
  {
    index: 3,
    titleTop: "喜欢的文学作品",
    titleBottom: "网文和名著",
    img: c3,
    alt: "Literature",
    link: "#literature",
  },
  {
    index: 1,
    titleTop: "喜欢的音乐",
    titleBottom: "My Music Box",
    img: c4,
    alt: "Music",
    link: "#music",
  },
  {
    index: 2,
    titleTop: "Web 设计和学习",
    titleBottom: "有点用但是不多",
    img: c5,
    alt: "Web-design",
    link: "#web-design",
  },
  {
    index: 3,
    titleTop: "猫咪",
    titleBottom: "这一页用来展示我的猫咪",
    img: c6,
    alt: "Cat",
    link: "#cat",
  },
];

const description =
  "在这里你可以看到我的个性展示";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="喜好" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
