---
import MainLayout from "../layouts/MainLayout.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import Card from "../components/ui/Card.astro";
import ServiceCard from "../components/ui/ServiceCard.astro";
import { Image } from "astro:assets";

import c1 from "../assets/pics/card-pic1.png";
import c2 from "../assets/pics/card-pic2.png";
import c3 from "../assets/pics/card-pic3.png";
import c4 from "../assets/pics/card-pic4.png";
import c5 from "../assets/pics/card-pic5.png";
import c6 from "../assets/pics/card-pic6.png";

// Definición detallada de cada servicio
const services = [
  {
    index: 1,
    titleTop: "喜欢的游戏",
    titleBottom: "第九艺术爱好者",
    img: c1,
    alt: "Games",
    description: "简介，还没想好怎么写",
    benefits: ["Increased organic traffic", "Higher website rankings", "Better user experience", "Increased brand visibility"],
    cta: "Get SEO Audit",
    link: "/services/seo",
  },
  {
    index: 2,
    titleTop: "喜欢的番剧",
    titleBottom: "二次元浓度较高",
    img: c2,
    alt: "Animation",
    description: "喜欢看的有很多",
    benefits: ["Immediate website traffic", "Highly targeted advertising", "Measurable ROI", "Flexible budgeting options"],
    cta: "Start PPC Campaign",
    link: "/services/ppc",
  },
  {
    index: 3,
    titleTop: "喜欢的文学作品",
    titleBottom: "网文和名著",
    img: c3,
    alt: "Literature",
    description: "推荐一些喜欢的作品",
    benefits: ["Increased brand awareness", "Better customer engagement", "Higher conversion rates", "Audience insights"],
    cta: "Social Media Strategy",
    link: "/services/social-media",
  },
  {
    index: 1,
    titleTop: "喜欢的音乐",
    titleBottom: "My Music Box",
    img: c4,
    alt: "Email Marketing",
    description: "单曲和专辑",
    benefits: ["Direct customer communication", "High ROI", "Personalized messaging", "Automated workflows"],
    cta: "Start Email Campaign",
    link: "/services/email-marketing",
  },
  {
    index: 2,
    titleTop: "Web 设计和学习",
    titleBottom: "有点用但是不多",
    img: c5,
    alt: "Web-design",
    description: "业余作品展示",
    benefits: ["Increased audience engagement", "Improved brand authority", "Better search visibility", "Valuable marketing assets"],
    cta: "Content Strategy",
    link: "/services/content",
  },
  {
    index: 3,
    titleTop: "猫咪",
    titleBottom: "这一页用来展示我的猫咪",
    img: c6,
    alt: "Cat",
    description: "铲屎官也是有回报的",
    benefits: ["Data-driven decision making", "Performance tracking", "User behavior insights", "ROI measurement"],
    cta: "Analytics Setup",
    link: "/services/analytics",
  },
];
---

<MainLayout 
  title="我的喜好 - Disparaitre" 
  description="这是一个个性展示页，展示Disparaitre的喜好"
>
  <div class="py-16 px-4 mx-auto max-w-screen-xl lg:py-24 lg:px-6">
    <div class="text-center mb-16">
      <h1 class="mb-4 text-5xl font-medium leading-none tracking-tight md:text-6xl">该种生物的社交觅食偏好设置</h1>
      <p class="text-xl font-normal leading-7 mx-auto max-w-3xl">
        在这里你可以看到我的个性展示，包括：<br>
        - 我在哪些圈子<br>
        - 我平时喜欢哪些内容
      </p>
    </div>
    
    <div class="space-y-24">
      {services.map((service, index) => (
        <div class="service-item">
          <div class="mb-12">
            <ServiceCard
              index={service.index}
              titleTop={service.titleTop}
              titleBottom={service.titleBottom}
              img={service.img}
              alt={service.alt}
              link={service.link}
            />
          </div>
          
          <div class="grid md:grid-cols-2 gap-10 px-4">
            <div>
              <h3 class="text-2xl font-medium mb-4">MqwqA ==> :)</h3>
              <p class="mb-6">{service.description}</p>
              <a href={service.link} class="inline-flex items-center px-8 py-4 bg-green text-dark rounded-2xl hover:bg-dark hover:text-white transition-all font-medium">
                {service.cta}
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
            
            <div class="bg-gray rounded-2xl p-8">
              <h3 class="text-2xl font-medium mb-4">列表</h3>
              <ul class="space-y-4">
                {service.benefits.map(benefit => (
                  <li class="flex items-start">
                    <svg class="mr-2 w-5 h-5 mt-1 text-green" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-24 text-center">
      <Card>
        <div class="p-10 md:p-16">
          <h2 class="text-3xl md:text-4xl font-medium mb-6">Ready to transform your digital presence?</h2>
          <p class="mb-10 text-xl max-w-2xl mx-auto">
            Contact us today to discuss your digital marketing needs and discover how our services can help your business grow and succeed online.
          </p>
          <a href="/contact" class="inline-flex items-center px-10 py-5 bg-dark text-white rounded-2xl hover:bg-green hover:text-dark transition-all font-medium text-xl">
            Get in touch
          </a>
        </div>
      </Card>
    </div>
  </div>
</MainLayout>

<style>
  .service-item:nth-child(even) {
    @apply bg-gray bg-opacity-20 py-16 -mx-4 px-4;
  }
  
  @media (min-width: 768px) {
    .service-item:nth-child(even) {
      @apply -mx-6 px-6;
    }
  }
</style>
